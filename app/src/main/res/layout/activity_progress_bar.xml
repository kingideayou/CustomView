<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.next.customview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.next.customview.ProgressBarActivity"
    tools:ignore="ResAuto">

    <com.next.customview.view.CustomProgressBar
        android:layout_width="120dp"
        android:layout_height="120dp"
        custom:firstColor="#125690"
        custom:secondColor="#394629"
        custom:circleWidth="60dp"
        custom:speed="10"
        android:layout_centerInParent="true"/>

</RelativeLayout>
